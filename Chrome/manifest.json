{
  "manifest_version": 2,
  "name": "Tab Hibernation",
  "description": "Sends your inactive tabs to sleep",
  "version": "0.1.3",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "send inactive tabs to sleep"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "commands": {
    "hibernateCurrentTab": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Hibernate the current Tab"
    }
  },
  "icons": {
    "16": "lib/icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "minimum_chrome_version": "25.0"
}
